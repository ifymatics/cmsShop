<%- include('../_layouts/header')  -%>


<div class="col-md-8 col-md-offset-2" style="background-color:white;margin-top: 3em;">
    <div class="row" style="margin-bottom: 5px;">
        <div class="col col-md-4">
            <h1><%= title %> </h1>
        </div>

    </div>

    <form method="post" action="">

        <div class="form-group">
            <label for="username"><b>Phone Number</b></label>
            <input type="text" name="username" class="form-control" id="">
        </div>
        <div class="form-group">
            <label for="password"><b>Password</b></label>
            <input type="password" name="password" class="form-control" id="">
        </div>

        <button type="submit" class="btn btn-primary"><b>Login</b></button>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    </form>
    <div style="margin-top: -6px;padding-bottom:10px;margin-left: 10vw;">
        <a href="/users/register"><b>Not a member? Register</b></a>
    </div>
</div>
<%- include('../_layouts/footer') -%>