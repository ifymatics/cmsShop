<%- include('../_layouts/adminHeader')  %>
<br>
<h2 class="page-title">Add a page</h2>
<a href="/admin/categories" class="btn btn-outline-primary">Back to all pages</a>
<br><br>
<form action="/admin/categories/edit-category/<%= id %>" method="post">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="title" class="form-control" value="<%= title %>" placeholder="title">
    </div>
    <div class="form-group">
        <label for="slug">Slug</label>
        <input type="text" name="slug" class="form-control" value="<%= slug %>" placeholder="slug">
    </div>

    <input type="hidden" name="id" value="<%= id %>">
    <button class="btn btn-outline-dark">submit</button>
</form>
<%- include('../_layouts/adminfooter') %>